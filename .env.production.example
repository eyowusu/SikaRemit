# Production Environment Configuration
# Copy this to .env.local for production deployment

# NextAuth Configuration
NEXTAUTH_SECRET=your-production-nextauth-secret-here-change-this-to-a-secure-random-string
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_DEBUG=false

# API Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Google OAuth (if used)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/payglobe_prod

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings
SECRET_KEY=your-django-secret-key-here-change-this-to-a-secure-random-string
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Stripe Configuration (if used)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Performance
CACHE_URL=redis://localhost:6379/1
SESSION_ENGINE=django.contrib.sessions.backends.cache

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_CACHE=redis://localhost:6379/2
