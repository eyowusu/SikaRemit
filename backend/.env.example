# =============================================================================
# SikaRemit Backend Environment Variables
# Copy this file to .env and fill in your actual values
# =============================================================================

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=api.sikaremit.com,localhost

# Database (PostgreSQL for production)
DB_PASSWORD=your-database-password
DJANGO_USE_SQLITE=false

# =============================================================================
# PAYMENT GATEWAYS - REQUIRED FOR REAL MONEY TRANSACTIONS
# =============================================================================

# MTN Mobile Money (MoMo)
# Get credentials from: https://momodeveloper.mtn.com
MTN_MOMO_API_KEY=your-mtn-api-user-id
MTN_MOMO_API_SECRET=your-mtn-api-key
MTN_MOMO_SUBSCRIPTION_KEY=your-ocp-apim-subscription-key
MTN_MOMO_WEBHOOK_SECRET=your-webhook-secret
# Production: https://proxy.momoapi.mtn.com
# Sandbox: https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_URL=https://proxy.momoapi.mtn.com

# Telecel Cash (formerly Vodafone Cash)
# Contact Telecel Ghana for API access
TELECEL_API_KEY=your-telecel-api-key
TELECEL_API_URL=https://api.telecel.com/v1
TELECEL_MERCHANT_ID=your-merchant-id
TELECEL_WEBHOOK_SECRET=your-webhook-secret

# AirtelTigo Money
# Contact AirtelTigo Ghana for API access
AIRTEL_API_KEY=your-airtel-api-key
AIRTEL_API_URL=https://openapi.airtel.africa
AIRTEL_CLIENT_ID=your-client-id
AIRTEL_CLIENT_SECRET=your-client-secret
AIRTEL_WEBHOOK_SECRET=your-webhook-secret

# Payment Callback URL (your server's webhook endpoint)
PAYMENT_CALLBACK_URL=https://api.sikaremit.com/api/v1/payments/webhooks

# =============================================================================
# ADDITIONAL PAYMENT PROVIDERS (Optional)
# =============================================================================

# Stripe (International card payments)
# Get credentials from: https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLIC_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# SMS Provider (AfricasTalking - recommended for Ghana)
# Get credentials from: https://account.africastalking.com
SMS_PROVIDER=africastalking
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_SENDER_ID=SikaRemit

# Twilio (Alternative SMS provider)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@sikaremit.com

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Google OAuth (Social login)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# MFA Configuration
MFA_ISSUER_NAME=SikaRemit

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Error tracking)
# Get DSN from: https://sentry.io
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Redis (Caching & Celery)
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================

# Bank of Ghana Reporting (if applicable)
COMPLIANCE_REPORTING_ENABLED=true
REGULATOR_API_ENDPOINT=https://api.bog.gov.gh/reporting

# =============================================================================
# FIREBASE (Push Notifications)
# =============================================================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# EXCHANGE RATES
# =============================================================================

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4
