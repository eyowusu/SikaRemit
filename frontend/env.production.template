# Production Environment Variables Template for SikaRemit Frontend
# Copy this to .env.production and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=https://your-render-backend.onrender.com

# NextAuth Configuration
NEXTAUTH_SECRET=your_production_nextauth_secret_here_change_this
NEXTAUTH_URL=https://your-render-frontend.onrender.com

# OAuth Providers (Optional - configure as needed)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Configuration (for frontend integration)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# PayPal Configuration (for frontend integration)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Application Configuration
NODE_ENV=production

# Monitoring and Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=false

# CDN and Asset URLs (Optional - for performance)
NEXT_PUBLIC_CDN_URL=https://your-cdn-url.com

# Social Media (Optional)
NEXT_PUBLIC_TWITTER_HANDLE=@SikaRemit
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/SikaRemit

# Support and Contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@SikaRemit.com
NEXT_PUBLIC_CONTACT_PHONE=+1-XXX-XXX-XXXX
