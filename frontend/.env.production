# SikaRemit Frontend Production Environment
# Copy this file to .env.local and update with your production values

# API Configuration
NEXT_PUBLIC_API_URL=https://sikaremit-api.onrender.com

# Authentication
NEXTAUTH_URL=https://sikaremit.netlify.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Payment Provider Public Keys (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_live_xxxxx

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# App Configuration
NEXT_PUBLIC_APP_NAME=SikaRemit
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@sikaremit.com

# Build Configuration
NODE_ENV=production
